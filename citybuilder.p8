function land_gen()
 noise_array={}
	local x
	local y
	for x=1,16 do
	 noise_array[x]={}
		for y=1,16 do
		 noise_array[x][y]=
		 static_noise_gen(15)
		end
	end
end

function draw_map()
 local x
	local y
 for x=1,16 do
  for y=1,16 do
   if noise_array[x][y]<9 then
		  mset(x,y,1)
		 elseif noise_array[x][y]<13 then
		 	mset(x,y,2)
		 elseif noise_array[x][y]<14 then
		 	mset(x,y,3)
		 elseif noise_array[x][y]<15 then
		 	mset(x,y,4)
		 end
		end
	end
end

function static_noise_gen(maxn)
 noise=rnd(maxn)
 return noise
end
